<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:titlebar="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/activity_main"
    android:orientation="vertical">
    <com.wuhenzhizao.titlebar.widget.CommonTitleBar
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        titlebar:titleBarColor="#ffffff"
        titlebar:statusBarColor="#ffffff"
        titlebar:fillStatusBar="true"
        titlebar:centerText="股票獲利計算機"
        titlebar:centerTextColor="#000000"
        titlebar:statusBarMode="dark"
        titlebar:centerTextSize="14dp"
        titlebar:titleBarHeight="60dp"
        titlebar:centerType="textView"
        titlebar:rightType="textView"
        app:leftText="會員"
        titlebar:leftType = "textView"/>

    <RelativeLayout
        android:focusable="true"
        android:layout_above="@+id/adView"
        android:layout_below="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <com.xiaweizi.marquee.MarqueeTextView
            android:id="@+id/marquee1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textColor="#ff0000"
            android:textSize="18sp"
            app:scroll_first_delay="0"
            app:scroll_interval="8000"
            app:scroll_mode="mode_forever" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_below="@+id/marquee1"
            android:id="@+id/top_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5"
                >
                <RelativeLayout
                    android:id="@+id/layout_1"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                    <TextView
                        android:layout_marginRight="8dp"
                        android:layout_marginLeft="8dp"
                        android:textColor="#000000"
                        android:gravity="center"
                        android:textSize="16dp"
                        android:text="隔日沖獲利計算"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        ></TextView>

                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/layout_2"

                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                    <TextView
                        android:layout_marginRight="8dp"
                        android:layout_marginLeft="8dp"
                        android:textColor="#000000"
                        android:gravity="center"
                        android:textSize="16dp"
                        android:text="融資獲利計算"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        ></TextView>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/layout_3"

                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                    <TextView
                        android:layout_marginRight="8dp"
                        android:layout_marginLeft="8dp"
                        android:textColor="#000000"
                        android:gravity="center"
                        android:textSize="16dp"
                        android:text="融券獲利試算"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        ></TextView>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/layout_4"

                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                    <TextView
                        android:layout_marginRight="8dp"
                        android:layout_marginLeft="8dp"
                        android:textColor="#000000"
                        android:gravity="center"
                        android:textSize="16dp"
                        android:text="其他計算"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        ></TextView>
                </RelativeLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="4"
                >
                <com.lw.banner.Banner
                    android:id="@+id/banner"
                    android:layout_width="match_parent"
                    android:layout_height="160dp" />

            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5"
                >
                <RelativeLayout
                    android:id="@+id/layout_5"

                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                    <TextView
                        android:layout_marginRight="8dp"
                        android:layout_marginLeft="8dp"
                        android:textColor="#000000"
                        android:gravity="center"
                        android:textSize="16dp"
                        android:text="盤中精選個股追蹤"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        ></TextView>

                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="4"
                >
                <RelativeLayout
                    android:id="@+id/layout_6"

                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                    <TextView
                        android:layout_marginRight="8dp"
                        android:layout_marginLeft="8dp"
                        android:textColor="#000000"
                        android:gravity="center"
                        android:textSize="16dp"
                        android:text="盤後籌碼"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        ></TextView>

                </RelativeLayout>
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                    <TextView
                        android:layout_marginRight="8dp"
                        android:layout_marginLeft="8dp"
                        android:textColor="#000000"
                        android:gravity="center"
                        android:textSize="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        ></TextView>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                    <TextView
                        android:layout_marginRight="8dp"
                        android:layout_marginLeft="8dp"
                        android:textColor="#000000"
                        android:gravity="center"
                        android:textSize="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        ></TextView>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                    <TextView
                        android:layout_marginRight="8dp"
                        android:layout_marginLeft="8dp"
                        android:textColor="#000000"
                        android:gravity="center"
                        android:textSize="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        ></TextView>
                </RelativeLayout>


            </LinearLayout>


        </LinearLayout>




        <com.roughike.bottombar.BottomBar
            android:focusable="false"
            app:bb_showShadow="true"
            app:bb_badgesHideWhenActive="true"
            app:bb_inActiveTabColor="#222222"
            app:bb_activeTabColor ="#222222"
            android:id="@+id/bottomBar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            app:bb_tabXmlResource="@xml/bottombar_tabs" />


    </RelativeLayout>


    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-7019441527375550/9592159821">
    </com.google.android.gms.ads.AdView>
</RelativeLayout>