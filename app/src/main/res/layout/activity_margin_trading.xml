<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TodaySellActivity"
    android:orientation="vertical">
    <ScrollView
        android:layout_above="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                >
                <RelativeLayout
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    >
                    <TextView
                        android:gravity="center"
                        android:id="@+id/text1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="放空成交價"
                        android:textSize="24dp"
                        ></TextView>
                    <com.libizo.CustomEditText
                        android:id="@+id/phoneedt"
                        android:layout_marginTop="20dp"

                        android:layout_below="@+id/text1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="輸入成交價"
                        android:inputType="numberDecimal"
                        app:libIZO_setPrefixTextColor="#FF4081"
                        app:libIZO_clearIconTint="#8f1f15"
                        app:libIZO_setBorderColor="#8f1f15"
                        app:libIZO_setBorderView="true"
                        app:libIZO_setClearIconVisible="true"
                        app:libIZO_setCornerRadius="4dp"
                        app:libIZO_setStrokeWidth="2dp"/>


                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    >
                    <TextView
                        android:gravity="center"
                        android:id="@+id/text2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="回補成交價"
                        android:textSize="24dp"
                        ></TextView>
                    <com.libizo.CustomEditText
                        android:id="@+id/edt2"

                        android:layout_marginTop="20dp"
                        android:layout_below="@+id/text2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="輸入成交價"
                        android:inputType="numberDecimal"
                        app:libIZO_setPrefixTextColor="#FF4081"
                        app:libIZO_clearIconTint="#8f1f15"
                        app:libIZO_setBorderColor="#8f1f15"
                        app:libIZO_setBorderView="true"
                        app:libIZO_setClearIconVisible="true"
                        app:libIZO_setCornerRadius="4dp"
                        app:libIZO_setStrokeWidth="2dp"/>


                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                >
                <RelativeLayout
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    >
                    <TextView
                        android:gravity="center"
                        android:id="@+id/text3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="放空張數"
                        android:textSize="24dp"
                        ></TextView>
                    <com.libizo.CustomEditText
                        android:id="@+id/edt3"

                        android:layout_marginTop="20dp"

                        android:layout_below="@+id/text3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="輸入成交張數"
                        android:inputType="numberDecimal"
                        app:libIZO_setPrefixTextColor="#FF4081"
                        app:libIZO_clearIconTint="#8f1f15"
                        app:libIZO_setBorderColor="#8f1f15"
                        app:libIZO_setBorderView="true"
                        app:libIZO_setClearIconVisible="true"
                        app:libIZO_setCornerRadius="4dp"
                        app:libIZO_setStrokeWidth="2dp"/>


                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    >
                    <TextView
                        android:gravity="center"
                        android:id="@+id/text4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="放空張數"
                        android:textSize="24dp"
                        ></TextView>
                    <com.libizo.CustomEditText
                        android:id="@+id/edt4"

                        android:layout_marginTop="20dp"
                        android:layout_below="@+id/text4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="輸入成交張數"
                        android:inputType="numberDecimal"
                        app:libIZO_setPrefixTextColor="#FF4081"
                        app:libIZO_clearIconTint="#8f1f15"
                        app:libIZO_setBorderColor="#8f1f15"
                        app:libIZO_setBorderView="true"
                        app:libIZO_setClearIconVisible="true"
                        app:libIZO_setCornerRadius="4dp"
                        app:libIZO_setStrokeWidth="2dp"/>


                </RelativeLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                >
                <TextView
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="券商折數"
                    android:textSize="24dp"
                    ></TextView>
                <com.libizo.CustomEditText
                    android:inputType="numberDecimal"
                    app:libIZO_setPrefixTextColor="#FF4081"
                    app:libIZO_clearIconTint="#8f1f15"
                    app:libIZO_setBorderColor="#8f1f15"
                    app:libIZO_setBorderView="true"
                    app:libIZO_setClearIconVisible="true"
                    app:libIZO_setCornerRadius="4dp"
                    app:libIZO_setStrokeWidth="2dp"
                    android:hint="輸入折數(6折 0.6 沒折扣 輸入1 免手續費輸入0)"
                    android:id="@+id/spinner"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    ></com.libizo.CustomEditText>

                <TextView
                    android:visibility="gone"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="融資成數"
                    android:textSize="24dp"
                    ></TextView>
                <com.libizo.CustomEditText
                    android:visibility="gone"
                    android:inputType="numberDecimal"
                    app:libIZO_setPrefixTextColor="#FF4081"
                    app:libIZO_clearIconTint="#8f1f15"
                    app:libIZO_setBorderColor="#8f1f15"
                    app:libIZO_setBorderView="true"
                    app:libIZO_setClearIconVisible="true"
                    app:libIZO_setCornerRadius="4dp"
                    app:libIZO_setStrokeWidth="2dp"
                    android:hint="輸入成數(6成輸入 6)"
                    android:id="@+id/edt"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    ></com.libizo.CustomEditText>
                <TextView
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="開始日期"
                    android:textSize="24dp"
                    ></TextView>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    >
                    <Button
                        android:layout_weight="1"
                        android:id="@+id/startbtn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="點我選擇"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        ></Button>
                    <TextView
                        android:id="@+id/starttext"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="日期"
                        ></TextView>

                </LinearLayout>
                <TextView
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="結束日期"
                    android:textSize="24dp"
                    ></TextView>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    >
                    <Button
                        android:layout_weight="1"
                        android:id="@+id/endtbtn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="點我選擇"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        ></Button>
                    <TextView
                        android:id="@+id/endtext"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="日期"
                        ></TextView>
                </LinearLayout>
                <TextView
                    android:id="@+id/datetext"
                    android:layout_marginLeft="12dp"
                    android:gravity="left"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="24dp"
                    ></TextView>
                <Button
                    android:id="@+id/button"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:text="按我試算"
                    ></Button>
                <LinearLayout
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:textSize="20dp"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="保證金:"
                        ></TextView>
                    <TextView
                        android:id="@+id/text_5"
                        android:layout_marginLeft="20dp"
                        android:textSize="20dp"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        ></TextView>

                </LinearLayout>
                <LinearLayout
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:textSize="20dp"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="擔保品:"
                        ></TextView>
                    <TextView
                        android:id="@+id/text_6"
                        android:layout_marginLeft="20dp"
                        android:textSize="20dp"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        ></TextView>

                </LinearLayout>
                <LinearLayout
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:textSize="20dp"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="利息:"
                        ></TextView>
                    <TextView
                        android:id="@+id/text_1"
                        android:layout_marginLeft="20dp"
                        android:textSize="20dp"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        ></TextView>

                </LinearLayout>
                <LinearLayout
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:textSize="20dp"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="回補價金:"
                        ></TextView>
                    <TextView
                        android:id="@+id/text_2"

                        android:layout_marginLeft="20dp"
                        android:textSize="20dp"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        ></TextView>

                </LinearLayout>
                <LinearLayout
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView

                        android:textSize="20dp"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="應收金額:"
                        ></TextView>
                    <TextView
                        android:id="@+id/text_3"

                        android:layout_marginLeft="20dp"
                        android:textSize="20dp"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        ></TextView>


                </LinearLayout>
                <LinearLayout
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:textSize="20dp"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="預估收益:"
                        ></TextView>
                    <TextView
                        android:id="@+id/text_4"

                        android:layout_marginLeft="20dp"
                        android:textSize="20dp"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        ></TextView>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>


    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="ca-app-pub-7019441527375550/4293289376">
    </com.google.android.gms.ads.AdView>
</RelativeLayout>